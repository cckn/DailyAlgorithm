{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": ["index.ts", "@types/types.d.ts"],
  "exclude": ["node_modules"]
}
